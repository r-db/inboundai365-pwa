{
  "name": "pwa-template-2025",
  "version": "1.0.0",
  "description": "Production-ready Progressive Web App template with cutting-edge performance optimizations",
  "main": "src/js/app.js",
  "scripts": {
    "dev": "webpack serve --mode development --open",
    "build": "npm run build:clean && npm run build:webpack && npm run build:optimize",
    "build:clean": "rimraf dist",
    "build:webpack": "webpack --mode production",
    "build:optimize": "npm run optimize:images && npm run optimize:html && npm run optimize:sw",
    "optimize:images": "imagemin src/images/* --out-dir=dist/images",
    "optimize:html": "html-minifier --input-dir dist --output-dir dist --file-ext html",
    "optimize:sw": "workbox generateSW workbox-config.js",
    "analyze": "ANALYZE=true npm run build",
    "test": "npm run test:unit && npm run test:e2e && npm run test:lighthouse",
    "test:unit": "jest",
    "test:e2e": "cypress run",
    "test:lighthouse": "lighthouse http://localhost:3000 --output=json --output-path=./lighthouse-report.json",
    "lint": "eslint src/**/*.js",
    "format": "prettier --write src/**/*.{js,css,html}",
    "serve": "serve dist -p 3000"
  },
  "keywords": [
    "pwa",
    "progressive-web-app",
    "offline-first",
    "service-worker",
    "performance",
    "template"
  ],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "@babel/core": "^7.23.0",
    "@babel/plugin-syntax-dynamic-import": "^7.8.3",
    "@babel/plugin-transform-runtime": "^7.23.0",
    "@babel/preset-env": "^7.23.0",
    "@types/node": "^24.6.2",
    "autoprefixer": "^10.4.21",
    "babel-loader": "^9.1.3",
    "compression-webpack-plugin": "^10.0.0",
    "copy-webpack-plugin": "^13.0.1",
    "css-loader": "^6.8.1",
    "css-minimizer-webpack-plugin": "^5.0.1",
    "eslint": "^8.52.0",
    "gzip-size": "^7.0.0",
    "html-minifier": "^4.0.0",
    "html-webpack-plugin": "^5.5.3",
    "imagemin": "^8.0.1",
    "imagemin-cli": "^7.0.0",
    "jest": "^29.7.0",
    "postcss": "^8.5.6",
    "postcss-loader": "^7.3.3",
    "prettier": "^3.0.3",
    "rimraf": "^5.0.5",
    "serve": "^14.2.1",
    "style-loader": "^3.3.3",
    "terser-webpack-plugin": "^5.3.9",
    "webpack": "^5.89.0",
    "webpack-bundle-analyzer": "^4.10.0",
    "webpack-cli": "^5.1.4",
    "webpack-dev-server": "^4.15.1",
    "workbox-cli": "^7.0.0",
    "workbox-webpack-plugin": "^7.0.0"
  },
  "dependencies": {
    "core-js": "^3.33.0",
    "lucide-react": "^0.544.0",
    "react": "^19.2.0",
    "react-dom": "^19.2.0"
  },
  "browserslist": [
    "> 0.25%",
    "not dead",
    "last 2 versions"
  ]
}

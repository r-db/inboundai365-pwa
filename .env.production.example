# Production Environment Configuration
# Copy this to .env.production and fill in actual values
# Load with: docker-compose --env-file .env.production up

# CRITICAL: Use strong, unique secrets in production
SECRET_KEY=generate-strong-random-secret-key-here
OPENAI_API_KEY=your-production-openai-key
ANTHROPIC_API_KEY=your-production-anthropic-key

# Redis Connection
REDIS_URL=redis://redis:6379/0

# Security (MUST be True in production with HTTPS)
SESSION_COOKIE_SECURE=True
FORCE_HTTPS=True

# CORS (your actual domain)
CORS_ORIGINS=https://yourdomain.com,https://www.yourdomain.com

# Rate Limiting (adjust based on your needs)
RATELIMIT_PER_MINUTE=20
RATELIMIT_PER_HOUR=200
RATELIMIT_PER_DAY=1000

# Logging
LOG_LEVEL=WARNING
